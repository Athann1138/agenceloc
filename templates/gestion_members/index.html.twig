{% extends 'base.html.twig' %}

{% block title %}Members index{% endblock %}

{% block body %}
    <h1>Members index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Userfirstname</th>
                <th>Age</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for member in members %}
            <tr>
                <td>{{ member.id }}</td>
                <td>{{ member.Username }}</td>
                <td>{{ member.Userfirstname }}</td>
                <td>{{ member.Age }}</td>
                <td>
                    <a href="{{ path('app_gestion_members_show', {'id': member.id}) }}">show</a>
                    <a href="{{ path('app_gestion_members_edit', {'id': member.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_gestion_members_new') }}">Create new</a>
{% endblock %}
